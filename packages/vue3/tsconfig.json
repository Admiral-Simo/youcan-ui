{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": [ "src/*" ],
      "dev/*": [ "src/dev/*" ],
      "@youcan/ui-vue3/types": ["./types"],
      "@youcan/ui-vue3/helpers": ["./helpers"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/index.js"
  ]
}
